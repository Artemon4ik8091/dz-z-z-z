<?php

function calculator($num1, $operator, $num2) {
    switch ($operator) {
        case '+':
            return $num1 + $num2;
        case '-':
            return $num1 - $num2;
        case '*':
            return $num1 * $num2;
        case '/':
            if ($num2 == 0) {
                echo "Error: Division by zero!";
                exit();
            }
            return $num1 / $num2;
    }
}

if (isset($_POST['calculate'])) {
    $num1 = $_POST['num1'];
    $operator = $_POST['operator'];
    $num2 = $_POST['num2'];

    $result = calculator($num1, $operator, $num2);

    echo "Result: $result";
} else {
?>

<form method="post">
    <input type="number" name="num1" value="<?php if (isset($_POST['num1'])) { echo $_POST['num1']; } ?>">
    <select name="operator">
        <option value="+">+</option>
        <option value="-">-</option>
        <option value="*">*</option>
        <option value="/">/</option>
    </select>
    <input type="number" name="num2" value="<?php if (isset($_POST['num2'])) { echo $_POST['num2']; } ?>">
    <input type="submit" name="calculate" value="Calculate">
</form>

<?php
}
?>

// G: Помнишь, что у меня скоро др?
// P: Конечно помню.
// G: Умнииичка) А что подаришь?)
// P: Хмм.. секрет)
// G: Та блина( Ладно
